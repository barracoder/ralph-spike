@using Microsoft.AspNetCore.Components

<div class="score-display" style="color:white; position:absolute; top:8px; left:8px; font-family:monospace;">
    <div>Score: @Score</div>
    <div>High Score: @HighScore</div>
    <div>Lives: @Lives</div>
</div>

@code {
    [Parameter] public int Score { get; set; }
    [Parameter] public int HighScore { get; set; }
    [Parameter] public int Lives { get; set; }
}